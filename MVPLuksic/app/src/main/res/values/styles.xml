<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ImageButtonAnimationStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">307dp</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="ItemDetailsTVStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@color/MaximumYellowRed</item>
    </style>

    <style name="ItemTitleTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">@color/RosePink</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityMainLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ItemDetailsLayoutStyle">
        <item name="android:background">@color/BlizzardBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SretanRodendanLayoutStyle" parent="ActivityMainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/CadetBlue</item>
    </style>

    <style name="SretanRodendanTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:layout_marginTop">226dp</item>
        <item name="android:layout_marginBottom">42dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:text">@string/sretanrodendan</item>
        <item name="android:textColor">@color/Wheat</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CardViewConstraintWidgetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CardViewLayoutStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:backgroundTint">@color/BlizzardBlue</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.ListaLuksic">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="Widget.Theme.ListaLuksic.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="Widget.ListaLuksic.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ListaLuksic.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>